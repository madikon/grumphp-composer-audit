{
    "name": "madikon/grumphp-composer-audit",
    "description": "A composer audit task for grumphp",
    "type": "library",
    "require": {
        "php": "^8.0",
        "phpro/grumphp": "^2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1",
        "friendsofphp/php-cs-fixer": "^3.16"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Madikon\\GrumphpComposerAudit\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    },
    "scripts": {
        "ci:grumphp": "vendor/bin/grumphp run"
	}
}
